
{%- extends 'layouts/base.njk' -%}

{%- block main -%}

<div class="theme-container theme-container--white">
  <div class="grid-container full align-centre">
    <h2>Our events</h2>
  </div>
</div>

<div class="theme-container theme-container--white">
  <div class="grid-container thirds">
    {%- for event in events -%}
      <div>
        {%- set content -%}
          <p class="date">{{- event.date -}}</p>
          <p>{{- event.name -}}</p>
        {%- endset -%}

        {%- set footer -%}
          <p class="align-centre">
            <a href="/events/{{- event.id -}}">More information <span class="visually-hidden">about event 1</span></a>
          </p>
        {%- endset -%}

        {{ card({
          heading: { 
            text: event.address.city,
            level: '3'
          },
          image: {
            src: event.image.src,
            alt: event.image.alt
          },
          content: content,
          footer: footer
        }) }}
      </div>
    {%- endfor -%}
  </div>
</div>

<div class="theme-container theme-container--white">
  <div class="grid-container full align-centre">
    <h2>Featured in</h2>
  </div>
  <div class="grid-container halves align-centre featured-in">
    <div>
      <a href="https://www.chroniclelive.co.uk/whats-on/whats-on-news/gallery/whitley-bay-food-festival-returns-24810206">
        <img src="/images/logo-chronicle.png" alt="Chronicle article: Feast by the Sea returns to Whitley Bay with local food vendors serving up a treat">
      </a>
    </div>
    <div>
      <a href="https://www.shieldsgazette.com/whats-on/things-to-do/12-pictures-from-the-final-day-of-the-great-north-feast-in-the-park-2022-in-south-shields-bents-park-3823100">
        <img src="/images/logo-shields-gazette.png" alt="Shields Gazette article: 12 pictures from the final day of the Great North Feast in the Park 2022 in South Shields' Bents Park">
      </a>
    </div>
  </div>
</div>


{%- endblock -%}