
{%- extends 'layouts/base.njk' -%}
{%- set pageTitle = 'Check your answers before sending' -%}

{%- block main -%}
  
  {{- errorSummary(errors) -}}
  <div class="box">
    <h1>
      Check your answers before sending
    </h1>

    <h2>
      About your business
    </h2>
    <dl>
      <dt>
        Exhibitor name:
      </dt>
      <dd>
        {{ data.business['exhibitor-name'] }}
      </dd>
      <dt>
        Type of products:
      </dt>
      <dd>
        {{ data.business['type-of-products'] }}
      </dd>
    </dl>

    <h2>
      Your contact details
    </h2>
    <dl>
      <dt>
        Name: 
      </dt>
      <dd>
        {{- data.owner.name -}}
      </dd>
      <dt>
        Phone: 
      </dt>
      <dd>
        {{- data.owner.phone -}}
      </dd>
      <dt>
        Email: 
      </dt>
      <dd>
        {{- data.owner.email -}}
      </dd>
      <dt>
        Address: 
      </dt>
      <dd style="white-space: pre-wrap">
        {{- data.owner.address -}}
      </dd>
    </dl>

    <h2 style="margin-bottom: 0;">
      Events you're attending
    </h2>
    {%- for event in data.eventsAttending -%}
      <h3 style="margin-bottom: 0;">
        Event {{loop.index}}
      </h3>
      <dl>
        <dt>
          Event details 
        </dt>
        <dd>
          {{- event.name -}}<br>
          {{- event.address.city -}}{{- ' - ' -}}{{- event.date -}}
        </dd>
        <dt>
          Requested items
        </dt>
        <dd>
          {%- for item in event.requestedItems -%}
            £{{- item.cost -}}{{- ' - ' -}}{{- item.name -}}<br>
          {%- endfor -%}
        </dd>
        <dt>
          Estimated cost
        </dt>
        <dd>
            £{{- event.estimatedCost -}}
        </dd>
      </dl>
    {%- endfor -%}

    <hr role="presentation">

    <div class="box">
      <p>
        Check all the information is correct before sending.
      </p>
    </div>

    <form method="post">
      <button class="button button-primary">
        Send
      </button>
    </form>
  </div>

{%- endblock -%}
