
{%- extends 'layouts/base.njk' -%}

{%- block main -%}

<div class="theme-container theme-container--white">
  <div class="grid-container full align-centre">
    <h1>
      Press
    </h1>
  </div>
</div>

{%- if articles.length > 0 -%}
  <div class="theme-container theme-container--white">
    <div class="grid-container full">
      <div class="align-left">
        <h2>Articles</h2>
          {%- for article in articles -%}
            <h3>
              {{article.publisher}}
            </h3>
            <p>
              {{article.excerpt}}
            </p>
            <p>
              <a href="{{article.url}}">
                Read article<span class="visually-hidden">: {{article.name}}</span>
              </a>
            </p>
          {%- endfor -%}
      </div>
    </div>
  </div>
{%- endif -%}

{%- endblock -%}