{%- macro textInput(params) -%}

{%- if params.type -%}
  {%- set type = 'type="' + params.type + '"' -%}
{%- endif -%}

<div class="form-control">
  <label for="{{- params.id -}}-input">
    {{- params.label -}}
  </label>
  {%- if params.errors -%}
    {%- for error in params.errors -%}
      {%- if error.id === params.id -%}
        <p>
          {{- error.hint -}}
        </p>
      {%- endif -%}
    {%- endfor -%}
  {%- endif -%}
  <input 
    id="{{- params.id -}}-input"
    name="{{- params.name -}}"
    value="{{- params.value -}}"
    type="{{- params.type or 'text' -}}"
  >
</div>
{%- endmacro -%}